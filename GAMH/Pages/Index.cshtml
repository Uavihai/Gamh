@page
@model IndexModel
@{
  ViewData["Title"] = "Home page";
}

@*Header*@
<div class="row jumbotron">

  <div class="col-md-3">
    <img src="https://www.onein9.org.il/wp-content/uploads/2018/08/donation_icon-01.jpg" class="img-responsive" />

  </div>

  <div class="col-md-9">
    <h2 style="color: #4485b8; text-align: center;">Welcome to the Gamah clothing store</h2>
    <p style="text-align: center;">The abbreviation Gemach is an acronym for charity, whose purpose is to provide donations to needy people, such as clothing, food, and more.</p>

  </div>
</div>



@*Cards*@
<div class="row">

  @*Shirts*@
  <div class="col-sm-4">
    <div class="card card-price">
      <div class="card-img">
        <a href="/Shirts">
          <img src="/images/shirt.jpg" class="img-responsive">
        </a>
      </div>
      <div class="card-body">
        <div class="lead">Shirts</div>
        <ul class="details">
          <li>Free shipping.</li>
          <li>Custom to your size.</li>
        </ul>
        <a href="/Shirts" class="btn btn-primary btn-lg btn-block buy-now">
          Get Now <span class="glyphicon glyphicon-triangle-right"></span>
        </a>
      </div>
    </div>
  </div>

  @*Pens*@
  <div class="col-sm-4">
    <div class="card card-price">
      <div class="card-img">
        <a href="/Pants">
          <img src="/images/pents.jpg" class="img-responsive">
        </a>
      </div>
      <div class="card-body">
        <div class="lead">Pents</div>
        <ul class="details">
          <li>Free shipping.</li>
          <li>Custom to your size.</li>
        </ul>
        <a href="/Pants" class="btn btn-primary btn-lg btn-block buy-now">
          Get Now <span class="glyphicon glyphicon-triangle-right"></span>
        </a>
      </div>
    </div>
  </div>

  @*Shoes*@
  <div class="col-sm-4">
    <div class="card card-price">
      <div class="card-img">
        <a href="/Shoes">
          <img src="/images/shoes.jpg" height="100" class="img-responsive">
        </a>
      </div>
      <div class="card-body">
        <div class="lead">Shoes</div>
        <ul class="details">
          <li>Free shipping.</li>
          <li>A lot of shoes sized from 12.</li>
        </ul>
        <a href="/Shoes" class="btn btn-primary btn-lg btn-block buy-now">
          Get Now <span class="glyphicon glyphicon-triangle-right"></span>
        </a>
      </div>
    </div>
  </div>

</div>


<hr />
<p style="text-align: left;"><strong>&nbsp; &nbsp; &nbsp; Overall</strong></p>
