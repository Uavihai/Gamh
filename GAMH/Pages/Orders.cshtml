@page
@using Models
@model GAMH.Pages.OrdersModel
@{
    ViewData["Title"] = "Orders";
}
<div class="row container jumbotron">
  
  <h1>Orders List</h1>

  <table class="table table-striped table-hover bg-info">
  
    <thead>
    <tr>
      <th>Date</th>
      <th>Gender</th>
      <th>Clothe</th>
      <th>From</th>
      <th>ShippingAddress</th>
      <th>Email</th>
      <th>Phone</th>
    </tr>
    </thead>
  
    <tbody>
    @foreach (var orderModel in Model.ClotheOrderList.OrderByDescending(x=>x.OrderDate))
    {
      <tr>
        <td>@orderModel.OrderDate</td>
        <td>@orderModel.Gender</td>
        <td>@orderModel.ClotheType</td>
        <td>@orderModel.FirstName</td>
        <td>@orderModel.ShippingAddress</td>
        <td>@orderModel.Email</td>
        <td>@orderModel.Phone</td>
      </tr>
    }
    </tbody>
  </table>


</div>
